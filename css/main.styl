@import 'jeet'

$breakpoint-page = 1024px
$breakpoint-tablet = 768px
$breakpoint-phone = 640px
$breakpoint-parallax = 1080px
// $breakpoint-parallax = 2080px
// Predefined Break-points
$mediaMaxWidth = 1260px
$mediaBp1Width = 960px
$mediaMinWidth = 480px

$hero-border = 0.35rem
$gutter-spacing = 10px
$inner-width = 70%
$inner-width-phone = 100%

$base-size = 22px
$base-size-phone = 20px

@import 'grids'
@import 'slides'

html
  font-size: $base-size
  font-family: 'EB Garamond', Times, serif
  @media(max-width: $breakpoint-phone)
    font-size: $base-size-phone

#main > .pg
  position: relative

header
  nav
    clearfix()
    max-width: 1024px
    margin: 0 auto
    padding: 15px
    font-size: 0.8rem
    a
      display: block
      float: right
      white-space: nowrap
      font-family: Tahoma, sans-serif
      margin-left: 2rem
      color: #999
      text-decoration: none
    a:hover
    a.on
      color: black
    a.logo
      display: block
      float: left
      margin-left: 0
      width: 7rem
      font-family: Tahoma, sans-serif
      font-weight: bold
    a:hover
      text-decoration: underline
    a.on:hover
      text-decoration: none

#headline
  margin: 2rem auto -.5rem
  max-width: 1024px
  h1
    padding: 0
    width: $inner-width
    font-size: 2rem
    font-weight: bold
    //font-family: 'Ovo', serif

h1
  margin: 1rem auto
  // padding-top: 1.5rem
  font-size: 1.5rem

@media(max-width: $breakpoint-phone)
  #headline
    margin: .8rem 1.5rem 0
    h1
      font-size: 1.7rem
      width: $inner-width-phone
  h1
    margin: 0.5rem 0

article
  clearfix()
  display: block
  margin: 0 auto
  width: 1024px
  max-width: 100%
  background-color: white
  background-repeat: no-repeat

  img
    display: block
    height: auto
    max-width: 100%

  p
    margin: 1em 0
    line-height: 1.2
  p + p
    margin-top: 1.5em

  .inner
    margin: 0 auto
    padding-top: 1rem
    padding-bottom: 2rem
    width: $inner-width
    @media(max-width: $breakpoint-phone)
      padding-left: 1.5rem
      padding-right: 1.5rem
      padding-bottom: 1.5rem
      width: auto

    & + .inner
    & + .boxed
      padding-top: 0
    .boxed
      padding-bottom: 0

  .boxed
    clearfix()
    padding: 1rem

    & + .inner
      padding-top: 0
    figure
      margin: $gutter-spacing 0

  .padded
    padding-top: 1rem
    padding-left: 3rem
    padding-right: 3rem
    padding-bottom: 1rem

  @media(max-width: $breakpoint-phone)
    p
      margin: 0.5em 0

picture
  display: block

figure
  margin: .25rem 0
  font-size: 0.9rem
  line-height: 1.4
  font-family: sans-serif
  color: #333

.reverse figure
  color: #ccc

//- start: parallax section
#main
  overflow-x: hidden
  overflow-y: scroll
  -webkit-overflow-scrolling: touch
  @media(min-width: $breakpoint-parallax)
    perspective: 1px
    transform-style: preserve-3d
  height: 100vh

@media(min-width: $breakpoint-parallax)
  header
    position: relative
    transform: translateZ(-.5px) scale(1.5)

#intro
.parallax .inner
  position: relative
  display: block
  background-color: white
  z-index: 1

#intro
  padding: 1rem 0 0

.parallax
  position: relative
  max-width: 1024px
  @media(min-width: $breakpoint-parallax)
    margin: 1rem auto 0
  picture
    object-fit: cover
    source
    img
      position: relative
      height: auto
      width: 100%
      @media(min-width: $breakpoint-parallax)
        transform: translateZ(-.2px) scale(1.2)
        z-index: -2

//- end: parallax section

//- start: Pages custom css
@import 'tours'
.portrait
  img
    border-radius: 25%
    border-width: 4px
    border-style: solid
  figure
    text-align: center
@import 'contact'
//- end: Pages custom css
//- start: Footer
footer
  nav
    clearfix()
    display: block
    padding: 3rem
    font-size: 0.8rem
    background-color: black
    a
      display: block
      margin-left: 2rem
      float: left
      color: white
      white-space: nowrap
      font-family: Tahoma, sans-serif
      text-decoration: none
    a.on
      display: none
//- end: Footer
