//- start: parallax section
#main
  overflow-x: hidden
  overflow-y: scroll
  -webkit-overflow-scrolling: touch
  @media(min-width: $breakpoint-parallax)
    perspective: 1px
    transform-style: preserve-3d
  height: 100vh

@media(min-width: $breakpoint-parallax)
  header
    position: relative
    transform: translateZ(-.5px) scale(1.5)

#intro
.parallax .inner
  position: relative
  display: block
  background-color: white
  z-index: 1

#intro
  padding: 1rem 0 0

.parallax
  position: relative
  margin: 1rem auto 0
  max-width: 1024px
  picture
    object-fit: cover
    source
    img
      position: relative
      height: auto
      width: 100%
      @media(min-width: $breakpoint-parallax)
        transform: translateZ(-.2px) scale(1.2)
        z-index: -2

