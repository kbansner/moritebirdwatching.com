@import 'jeet'

$breakpoint-page = 1024px
$breakpoint-tablet = 768px
$breakpoint-phone = 640px
$breakpoint-parallax = 1080px
// Predefined Break-points
$mediaMaxWidth = 1260px
$mediaBp1Width = 960px
$mediaMinWidth = 480px

$hero-border = 0.35rem
$boxed-border = 8px

html
  font-size: 22px
  font-family: 'EB Garamond', Times, serif
  @media(max-width: $breakpoint-phone)
    font-size: 16px


#main
  overflow-y: scroll
  overflow-x: hidden

#main > .pg
  position: relative

header
  nav
    clearfix()
    max-width: 1024px
    margin: 0 auto
    padding: 15px
    font-size: 0.8rem
    a
      display: block
      float: right
      white-space: nowrap
      font-family: Tahoma, sans-serif
      margin-left: 2rem
      color: #999
      text-decoration: none
    a:hover
    a.on
      color: black
    a.logo
      display: block
      float: left
      margin-left: 0
      width: 7rem
      font-family: Tahoma, sans-serif
      font-weight: bold
    a:hover
      text-decoration: underline
    a.on:hover
      text-decoration: none

footer
  nav
    clearfix()
    display: block
    padding: 3rem
    font-size: 0.8rem
    background-color: black
    a
      display: block
      margin-left: 2rem
      float: left
      color: white
      white-space: nowrap
      font-family: Tahoma, sans-serif
      text-decoration: none
    a.on
      display: none

//- start: Hero Unit
.hero
  background-position: center
  background-repeat: no-repeat
  background-size: cover
  box-sizing: border-box

#headline
  margin: 2rem auto 0
  max-width: 1024px
  h1
    margin: 0 auto
    padding: 0
    width: 70%
    font-size: 2rem
    font-weight: normal
    font-family: 'Ovo', serif


// Large Hero
// @media(min-width: $mediaBp1Width)
.hero
  position: relative
  height: 560px
  max-height: 70vw


#welcome .hero
  // background-image: url(/images/hero/parrents-preening-lg.jpg)
  background-image: url(/images/hero/hornbill-lg.jpg)

// hero fade in
.is-js .hero::after
    position: absolute
    content: ''
    top: 0
    left: 0
    bottom: 0
    right: 0
    background-color: #eee
    z-index: 1
    transition: opacity 1s linear
.is-js .hero.loaded::after
    opacity: 0

// Vertical Tablet Hero
@media(min-width: $breakpoint-phone) and (max-width: $mediaBp1Width)
  .hero
    position: relative
    width: auto
    height: 500px
    max-height: 65.1vw

  #welcome .hero
    background-image: url(/images/hero/hornbill-md.jpg)


// Phone Hero
@media(max-width: $breakpoint-phone)
  h1
    padding-top: 1.7rem
    font-size: 1.6rem

  .hero
    position: relative
    height: 50vw
    max-height: none
    // background-image: none !important

  #welcome .hero
    background-image: url(/images/hero/hornbill-sm.jpg)

//- end: Hero Unit

article
  clearfix()
  display: block
  margin: 0 auto
  width: 1024px
  max-width: 100%
  background-color: white
  background-repeat: no-repeat

  a
    color: #180;
    text-decoration: none
    &:hover
      text-decoration: underline

  img
    display: block
    height: auto
    max-width: 100%

  p
    line-height: 1.2
  p+p
    margin-top: 1.5rem

  p.heading:first-letter
    // float: left
    // font-family: 'Ovo', serif
    // font-size: 75px
    // line-height: 60px
    // padding-top: 4px
    // padding-right: 8px
    // padding-left: 3px


  .inner
    margin: 0 auto
    padding-top: 1rem
    padding-bottom: 3rem
    width: 70%

    & + .inner
    & + .boxed
      padding-top: 0
    .boxed
      padding-bottom: 0

  .boxed
    clearfix()
    padding-top: 1rem
    padding-left: 3rem
    padding-right: 3rem
    padding-bottom: 1rem
    img
      border: 3px solid #111
      @media(max-width: $breakpoint-phone)
        border-width: 5px

    & + .inner
      padding-top: 0
    figure
      margin: $boxed-border 2px

.half-col
  float: left
  width: 50%
  box-sizing: border-box

.third-col
  float: left
  width: 33.33%
  box-sizing: border-box
  @media(max-width: $breakpoint-phone)
    max-width: 300px

.quarter-col
  float: left
  width: 25%
  box-sizing: border-box
  @media(max-width: $breakpoint-phone)
    max-width: 300px

picture.half-col
picture.third-col
picture.quarter-col
  padding-left: (3 * $boxed-border)
  padding-right: (3 * $boxed-border)
  padding-bottom: (3 * $boxed-border)
  img
    margin: 0 auto

@media(max-width: $breakpoint-phone)
  .half-col
  .third-col
    float: none
    margin-top: (3 * $boxed-border)
    margin-left: auto
    margin-right: auto
  .half-col:first-child
  .third-col:first-child
    margin-top: 0

  .quarter-col
    margin-top: (3 * $boxed-border)
    width: 50%

  picture.half-col
  picture.third-col
    width: 75%

picture
  display: block

figure
  margin: .25rem 0
  font-size: 0.9rem
  line-height: 1.4
  color: #333

//- start: parallax section
#main
  @media(min-width: $breakpoint-parallax)
    perspective: 1px
    transform-style: preserve-3d
  height: 100vh
  overflow-x: hidden
  overflow-y: scroll
  -webkit-overflow-scrolling: touch

@media(min-width: $breakpoint-parallax)
  header
    position: relative
    transform: translateZ(-.5px) scale(1.5)

#intro
.parallax .inner
  position: relative
  display: block
  background-color: white
  z-index: 1

#intro
  padding: 1rem 0 0

.parallax
  position: relative
  margin: 1rem auto 0
  max-width: 1024px
  picture
    object-fit: cover
    source
    img
      position: relative
      height: auto
      width: 100%
      @media(min-width: $breakpoint-parallax)
        transform: translateZ(-.2px) scale(1.2)
        z-index: -2

//- end: parallax section

