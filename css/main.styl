  .third-col
    float: none
    margin-top: (3 * $boxed-border)
    margin-left: auto
    margin-right: auto
    width: auto
  .half-col:first-child
  .third-col:first-child
    margin-top: 0

  .quarter-col
    margin-top: (3 * $boxed-border)
    width: 50%

  picture.half-col
  picture.third-col
    width: 75%

