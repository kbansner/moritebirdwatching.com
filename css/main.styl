//- end: Pages custom css

//- start: Footer
footer
  a
    display: block
    margin: 2rem 0 4rem
    text-align: center
    font-family: Tahoma, sans-serif
    font-size: 0.8rem
    color: #666
    text-transform: lowercase
    text-decoration: none


.top
  position: relative
  display: block
  margin: 4rem auto
  width: 6rem
  height: 1rem
  text-align: center

.top::before
  position absolute
  left: 0
  bottom: 0
  width: 6rem
  height: 5rem
  content: ''

.top::after
  position absolute
  left: 50%
  margin-left: -15px
  bottom: 1.5rem
  width: 30px
  height: 28px
  background: url(/images/arrows.svg) 50% 26px repeat
  background-size: 100%
  transform: rotate(180deg)
  opacity: 0.8
  content: ''

.top:hover::after
  animation: animatedBackground 2s linear infinite;

@keyframes animatedBackground
  from
    background-position-y: 100%
  to
    background-position-y: 01px

//- end: Footer
