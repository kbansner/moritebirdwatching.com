:root
  --scale-factor: 1.16;
  --rotate: 1deg;
  --x-factor: 0px;
  --transform-duration: 6s;

.slide
  .slide-cropper
    position: relative
    width: 100%
    height: 100%
    overflow: hidden

  .slide-background
    position: absolute
    width: 100%
    height: 100%
    background-position: center
    background-repeat: no-repeat
    background-size: cover

.slider.loaded .slide-background
  transform: translate3d(0,0,0) scale(1)

.on.slide .slide-background
    transition: var(--transform-duration) transform
    transition-delay: 1s

.on.slide:nth-child(odd) .slide-background
  transform: translateX(calc(var(--x-factor) * -1)) scale(var(--scale-factor)) rotate(calc(var(--rotate) * -1))

.on.slide:nth-child(even) .slide-background
  transform: translateX(var(--x-factor)) scale(var(--scale-factor)) rotate(var(--rotate))

