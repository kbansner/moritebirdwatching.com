.team-slider
  position: relative
  display: flex
  scroll-snap-type: x mandatory
  overflow: hidden
  overflow-x: scroll
  padding: 0
  backface-visibility: hidden
  transform: translate3d(0,0,0)
  width: 100%
  height: 320px
  height: 95%
  scroll-padding: 0 50%

.team-blank
.team-slide
  scroll-snap-align: center
  poistion: relative
  display: block
  width: 36%
  // &:first-child
  //   width: 35%
  flex-shrink: 0
  $portraitWidth = 15vw
  // box-sizing: border-box;
  @media(max-width: $breakpoint-phone)
    width: 100%
  figure
    cursor: pointer;
    margin: 1em;
    opacity: 0.5;
    backface-visibility: hidden
    animation-duration: 3s
    animation-fill-mode: forwards
    transition-delay: 50ms, 50ms
    transform: scale(0.5) translateZ(0px);
    > div
      border-radius: 5px;
      position: relative;
      margin: 2rem auto;
      width: $portraitWidth * 0.7;
      height: $portraitWidth * 0.7;
      max-width: 120px
      max-height: 120px

      @media(max-width: $breakpoint-phone)
        width: $portraitWidth * 0.7 * 4;
        height: $portraitWidth * 0.7 * 4;

      overflow: hidden;
      transform: rotate(45deg) translateZ(0px);
      > div
        background: url(/images/team/team.jpg) no-repeat;
        background-size: cover;
        background-position: 0px 0px;
        position: absolute;
        top: 50%;
        left: 50%;
        width: $portraitWidth;
        height: $portraitWidth;
        max-width: 170px
        max-height: 170px
        @media(max-width: $breakpoint-phone)
          width: $portraitWidth * 4;
          height: $portraitWidth * 4;

        transform: rotate(-45deg) translate(0%, -70%);
    figcaption
      text-align: center
      h2
        color: #111;
        font-size: 1rem;
        font-weight: 800;
      p
        color: #666;
        font-size: 0.75rem;
        font-weight: 400;

.team-slide:nth-of-type(1) figure > div > div
  background-position: 0px 0px !important;
.team-slide:nth-of-type(2) figure > div > div
  background-position: 0px 20% !important;
.team-slide:nth-of-type(3) figure > div > div
  background-position: 0px 40% !important;
.team-slide:nth-of-type(4) figure > div > div
  background-position: 0px 60% !important;
.team-slide:nth-of-type(5) figure > div > div
  background-position: 0px 80% !important;
.team-slide:nth-of-type(6) figure > div > div
  background-position: 0px 100% !important;

@media(max-width: $breakpoint-phone)
  .team-blank
    display: none
.launch .active figure
  animation-name: expandTeam

@keyframes expandTeam
  0%
    opacity: 0.5
    transform: scale(0.5)
  60%
    opacity: 1
    transform: scale(1) translateZ(0px)
  100%
    opacity: 1
    transform: scale(0.5)
