  overflow: hidden
  overflow-x: scroll
  // scroll-snap-points-x: repeat(100%);
  // scroll-snap-destination: 0% 100%;

.slider
.slide
  position: relative
  height: 560px
  max-height: 70vw

.slide
  scroll-snap-align: center
  display: block
  width: 100%
  flex-shrink: 0

.slide
  .slide-cropper
    position: relative
    width: 100%
    height: 100%
    overflow: hidden

  .slide-background
    position: absolute
    width: 100%
    height: 100%
    background-position: center
    background-repeat: no-repeat
    background-size: cover

.auto-show .on.slide .slide-background
  animation-duration: $duration
  animation-delay: 1s
  animation-fill-mode: forwards

.auto-show .on.slide:nth-child(odd) .slide-background
  animation-name: kenburnsOdd

.auto-show .on.slide:nth-child(even) .slide-background
  animation-name: kenburnsEven

