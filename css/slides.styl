// hero fade in
.is-js .slider::after
    position: absolute
    content: ''
    top: 0
    left: 0
    bottom: 0
    right: 0
    background-color: #eee
    z-index: 1
    transition: opacity 1s linear
.is-js .slider.loaded::after
    opacity: 0

