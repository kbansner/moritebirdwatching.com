//- start: Hero Unit
:root
  --scale-factor: 1.16;
  --rotate: 1deg;
  --x-factor: 0px;
  --transform-duration: 6s;

.slide
  span.slide-caption
    position: absolute
    display: block
    width: 100%
    text-align: center
    top: 49%
    color: white
    text-shadow: 1px 1px 5px black

// Large Hero
.slider
  display: flex
  scroll-snap-type: x mandatory
  overflow: hidden
  overflow-x: scroll
  // scroll-snap-points-x: repeat(100%);
  // scroll-snap-destination: 0% 100%;

.slider
.slide
  position: relative
  height: 560px
  max-height: 70vw

.slide
  scroll-snap-align: center
  display: block
  width: 100%
  flex-shrink: 0

.slide
  .slide-cropper
    position: relative
    width: 100%
    height: 100%
    overflow: hidden

  .slide-background
    position: absolute
    width: 100%
    height: 100%
    background-position: center
    background-repeat: no-repeat
    background-size: cover

.slider.loaded .slide-background
  transform: translate3d(0,0,0) scale(1)

.on.slide .slide-background
    transition: var(--transform-duration) transform
    transition-delay: 1s

.on.slide:nth-child(odd) .slide-background
  transform: translateX(calc(var(--x-factor) * -1)) scale(var(--scale-factor)) rotate(calc(var(--rotate) * -1))

.on.slide:nth-child(even) .slide-background
  transform: translateX(var(--x-factor)) scale(var(--scale-factor)) rotate(var(--rotate))

.is-js .lazyload .slide-background
  background-image: none

