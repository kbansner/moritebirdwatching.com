.service
  position: relative
  overflow: hidden
  margin-top: 1rem
  .service-description
    float: left;
    display: block
    margin-bottom: 1rem
    padding-right: 1rem
    // font-size: .8rem
    // line-height: 1rem
    width: 30%

  .service-picture
    position: relative
    width: calc(70% - 1rem)
    float: right;
    // display: block
    margin-bottom: 3rem
    margin-left: 0

  @media(max-width: $breakpoint-tablet)
    .service-description
    .service-picture
      float: none
      width: auto

.arrow-prev
  position: absolute
  left: 0
  top: 0
  bottom: 0
  width: 40px
  z-index: 10
  cursor: pointer
  background-image: linear-gradient(to right, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 40%)

.arrow-next
  position: absolute
  right: 0
  top: 0
  bottom: 0
  width: 40px
  z-index: 10
  cursor: pointer
  background-image: linear-gradient(to left, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 40%)

.gallery
  display: flex
  scroll-snap-type: x mandatory
  overflow-x: scroll

  picture
    scroll-snap-align: center
    max-width: 450px
    & + picture
      margin-left: 20px
    img
      max-width: none
