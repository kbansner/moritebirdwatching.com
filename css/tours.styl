.tour
  position: relative
  overflow: hidden
  margin-top: 1rem
  padding-bottom: 1rem
  .tour-title
    font-size: 1.3rem

  .tour-title
  .tour-description
    float: left
    display: block
    margin-bottom: .5rem
    width: 36%

  .tour-picture
    position: relative
    width: 60%
    float: right
    margin-bottom: 1rem
    margin-left: 0

  @media(max-width: $breakpoint-tablet)
    .tour-title
    .tour-description
    .tour-picture
      float: none
      width: auto

@keyframes fadeIn
  0%
    opacity: 0.2
  100%
    opacity: 1

.gallery
  display: flex
  scroll-snap-type: x mandatory
  overflow-x: scroll
  scroll-padding: 1px
  // scroll-margin: 10px


  img
    scroll-snap-align: start
    flex-shrink: 0
    padding-right: 15px
    max-width: none
    opacity: 0.2
    height: 33.2vw
    max-height: 380px
    width: 50vw

  img.on
    animation-name: fadeIn
    animation-duration: 1s
    animation-direction: alternate
    animation-fill-mode: both

  @media(max-width: $breakpoint-phone)
    $margins = (2 * $inner-margin-phone)
    img
      width: 78vw
      height: 51.998vw
