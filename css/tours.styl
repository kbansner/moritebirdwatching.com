.tour
  position: relative
  overflow: hidden
  margin-top: 1rem
  padding-bottom: 1rem
  .tour-title
    font-weight: bold
    font-size: 1.1rem

  .tour-title
  .tour-description
    float: left
    display: block
    margin-bottom: .5rem
    padding-right: 1rem
    width: 40%

  .tour-picture
    position: relative
    width: calc(60% - 1rem)
    float: right
    margin-bottom: 1rem
    margin-left: 0

  @media(max-width: $breakpoint-tablet)
    .tour-title
    .tour-description
    .tour-picture
      float: none
      width: auto

.arrow-prev
  position: absolute
  left: 0
  top: 0
  bottom: 0
  width: 40px
  z-index: 10
  cursor: pointer
  background-image: linear-gradient(to right, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 40%)

.arrow-next
  position: absolute
  right: 0
  top: 0
  bottom: 0
  width: 40px
  z-index: 10
  cursor: pointer
  background-image: linear-gradient(to left, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 40%)

.gallery
  display: flex
  scroll-snap-type: x mandatory
  overflow-x: scroll

  picture
    scroll-snap-align: center
    & + picture
      margin-left: 20px
    img
      max-width: none

  picture
    width: 600px
    img
      width: 580px
  @media(max-width: $breakpoint-phone)
    $margins = (2 * $inner-margin-phone)
    picture
      width: 100vw - $margins
      img
        width: 100vw - $margins
