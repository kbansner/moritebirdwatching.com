.tour
  position: relative
  overflow: hidden
  margin-top: 1rem
  padding-bottom: 1rem
  .tour-title
    font-size: 1.3rem

  .tour-title
  .tour-description
    display: block
    margin-bottom: .5rem

  .tour-picture
    margin-bottom: 1rem
    margin-left: 0

@keyframes fadeIn
  0%
    opacity: 0.2
  100%
    opacity: 1

.gallery
  display: flex
  scroll-snap-type: x mandatory
  overflow-x: scroll
  // scroll-padding: 1px

  img
    scroll-snap-align: start
    flex-shrink: 0
    padding-right: 15px
    max-width: none
