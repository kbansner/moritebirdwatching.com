.tour
  position: relative
  overflow: hidden
  margin-top: 1rem
  padding-bottom: 1rem
  .tour-title
    font-size: 1.3rem

  .tour-title
  .tour-description
    float: left
    display: block
    margin-bottom: .5rem
    margin-left: 1rem
    padding-right: 1rem
    width: 35%

  .tour-picture
    position: relative
    width: calc(60% - 1rem)
    float: right
    margin-bottom: 1rem
    margin-left: 0

  @media(max-width: $breakpoint-tablet)
    .tour-title
    .tour-description
    .tour-picture
      float: none
      width: auto

@keyframes fadeIn
  0%
    opacity: 0.5
  100%
    opacity: 1

.gallery
  display: flex
  scroll-snap-type: x mandatory
  overflow-x: scroll

  picture
    scroll-snap-align: center
    & + picture
      margin-left: 20px
    img
      max-width: none
      opacity: 0.5


  picture.on img
    animation-name: fadeIn
    animation-duration: 1s
    // animation-delay: .5s
    animation-direction: alternate
    animation-fill-mode: both

  picture
    width: 600px
    img
      width: 580px
  @media(max-width: $breakpoint-phone)
    $margins = (2 * $inner-margin-phone)
    picture
      width: 100vw - $margins
      img
        width: 100vw - $margins
