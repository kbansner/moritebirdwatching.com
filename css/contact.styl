.contact-form
  margin-bottom: 3rem
  div
    padding: 1rem 0 0

  label span
    display: block
    padding: 5px 0

  input[type=text]
  input[type=email]
    width: 100%

  textarea
    width: 100%
    height: 6rem

.btn
  padding: 0 .6rem
  background-color: blue
  line-height: 2rem
  border-radius: .5rem
  color: white
  border: none
  cursor: pointer
  font-family: sans-serif
  font-weight: bold

.btn-bg
  display: block
  margin: 1rem auto
  width: 8rem
  text-align: center
  text-decoration: none
