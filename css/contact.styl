.contact-form
  margin-bottom: 3rem
  div
    padding: 1rem 1rem 0 0

  label span
    display: block
    padding: 5px 0

  input[type=text]
  input[type=email]
    width: 100%
    box-sizing: border-box

  textarea
    width: 100%
    height: 6rem
    box-sizing: border-box

button.btn
  padding: 0 .6rem
  background-color: blue
  line-height: 2rem
  border-radius: .5rem
  color: white
  border: none
  cursor: pointer
